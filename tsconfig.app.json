{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/data.ts",
    "src/main.ts",
    "src/stores",
    "src/shared",
    "src/settings",
    "src/app"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "src/node_modules/.tmp/tsconfig.app.tsbuildinfoinfo",

    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
